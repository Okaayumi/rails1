<div class="container">
    <h3>予定の新規追加</h3>

    <%= form_with model:@post do |f|%>
    <table>
      <tr>
        <th><%=f.label :title,"タイトル"%></th>
          <td><%=f.text_field :title%></td>
      </tr>

      <tr>
        <th><%=f.label :start,"開始日"%></th>
          <td><%=f.datetime_field:start%></td>
      </th>

      <tr>
        <th><%=f.label :finish,"終了日"%></th>
          <td><%=f.datetime_field:finish%></td>
      </tr>
      <tr>
        <th><%= f.label :allday,"終日" %></th>
          <td><%= f.check_box 'allday',{},true,false %>
            <% if @post.allday == true %>
            ⚫︎
            <% else @post.allday == false %>

            <% end %>
          <%= label_tag :allday,"終日の場合はチェックを入れてください" %></td>
      </tr>

      <tr>
        <th><%=f.label :note,"スケジュールメモ"%></th>
        <td><%=f.text_area :note%></td>
      </tr>
    </table>

    <div class="saiving">
    <ul>
        <button><%= f.submit "保存"%></button>
        <button><%= link_to "キャンセル", :posts %></button>
    </ul>
    </div>
    <% end %>

</div>


