<div class ="container">
    <header>
    <div class="pagetitle">
        <p>予定一覧</p>
        <button class="btn_new"><%=link_to "新規追加",:new_post %></button>
    </div>
    </header>

    <table border="1">
    <thead>
        <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>更新日時</th>
        
        </tr>
    </thead>

    <tbody>
        <% @posts.each do |post| %>
        <tr>
            <td><%= post.id %></td>
            <td><%= post.title %></td>
            <td><%= post&.start&.to_date&.strftime('%Y/%m/%d') %></td>
            <td><%= post&.finish&.to_date&.strftime('%Y/%m/%d') %></td>
            <td>
              <% if post.allday == true %>
              ○
              <% else post.allday == false %>
              <% end %>
            </td>

            <td>
              <%= post.updated_at.to_s(:datetime_jp) %>
            </td>
            <td>
              <%= link_to "詳細",post%>
            </td>
        </tr>
        <% end %>
    </tbody>
    

    </table>

    <table>
    <tfoot>
        <div class="under">
            <P>予定合計 <%= @count%>件</p>
            <p><%= @date1 %></P>
        </div>
    </tfoot>
    </table>
</div>


